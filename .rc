#! bash

[[ -n ${ZSH_VERSION-} ]] &&
  GIT_SINGLETON_ROOT="$0" ||
  GIT_SINGLETON_ROOT="$BASH_SOURCE"
[[ $GIT_SINGLETON_ROOT =~ ^/ ]] ||
  GIT_SINGLETON_ROOT="$PWD/$GIT_SINGLETON_ROOT"
export GIT_SINGLETON_ROOT="$(cd "$(dirname $GIT_SINGLETON_ROOT)"; pwd)"

export PATH="$GIT_SINGLETON_ROOT/lib:$PATH"
export MANPATH="$GIT_SINGLETON_ROOT/man:$MANPATH"
